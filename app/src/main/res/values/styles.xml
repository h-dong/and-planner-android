<resources>

    <!-- Base application theme. -->
    <style name="ANDigitalTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/andigital_red</item>
        <item name="colorPrimaryDark">@color/andigital_red</item>
        <item name="colorAccent">@color/andigital_blue</item>
    </style>

    <style name="ANDigitalTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ANDigitalTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ANDigitalTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/andigital_red</item>
    </style>

</resources>
